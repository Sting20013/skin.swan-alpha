<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload>Skin.SetBool(ClearPlaylist)</onload>
	<onload>Skin.SetBool(ReloadOnLogin)</onload>
	
	<!-- Blur test -->
	<onload condition="!Skin.HasSetting(BlurEnabled)">Skin.ToggleSetting(BlurEnabled)</onload>		
	<onload condition="!String.IsEqual(Skin.String(BlurRadius),5)">Skin.SetString(BlurRadius,5)</onload>
	<onload condition="String.IsEmpty(Skin.String(BlurContainer))">Skin.SetString(BlurContainer,99005)</onload>
	<onload condition="!Skin.HasSetting(BlurEnabled)">RunScript(script.embuary.helper,action=restartservice)</onload>
	
	<!-- ReplaceWindow(11110)  (1)1110 HUB -->
	<onload>ReplaceWindow($INFO[System.StartupWindow])</onload> <!-- HOME, (1)0000 -->
	<controls />
</window>
