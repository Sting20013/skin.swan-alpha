<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1140">
	<animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
			
	<defaultcontrol>499</defaultcontrol>
	<controls>
	
	<!-- <visible>String.IsEqual(window(home)property.(showmusiccontentcontainer),true)</visible> -->
	<!-- - current list ? 
	- similiar genre (artist) / similiar genre (songs)
	- musicvideos of album
	- musicvideos by artist
	- more from artist ...if
	-->
	 
	 <!-- test option 1 - put list center
can be wider if info is toggled off	 -->
		<control type="group">
			<visible>!Skin.HasSetting(MusicOSD_SmallPlaylist)</visible>
			<control type="image">
				<left>35%</left>
				<right>20%</right>
				<height>100%</height>
				<texture colordiffuse="$VAR[MusicPlayerBorder_CDiffuse]">colors/white70.png</texture>
			</control>
				
			<control type="group">
				<description>put me left bottom cond slide up or roght fade in</description>
				<left>36%</left>
				<right>21%</right>
				<height>100%</height>
				
				<control type="label" id="498">
					<top>50</top>
					<height>25</height>
					<aligny>center</aligny>
					<label>Current Playlist$INFO[Container(499).NumItems,  ( , Items)]</label>
				</control>
				<control type="panel" id="499">
					<top>100</top>
					<bottom>100</bottom>
					<aligny>top</aligny>
					<align>center</align>
					<preloaditems>2</preloaditems>
					<orientation>vertical</orientation>
					
					<onup>699</onup>
					<onleft>ClearProperty(CurrentPlaylistVisible,home)</onleft>
					<onright>ClearProperty(CurrentPlaylistVisible,home)</onright>
			
					
					<onclick>RunScript(script.embuary.helper,action=playall,id=499,type=music,method=fromhere)</onclick>
					
					<onleft>6093</onleft>
					
					<pagecontrol>49960</pagecontrol>
					
					<scrolltime tween="quadratic">400</scrolltime>
					
					<itemlayout height="100">
						<control type="group">
							<height>90</height>
							
							<control type="image">
								<centertop>50%</centertop>
								<left>5</left>
								<width>70</width>
								<height>70</height>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="image">
								<centertop>50%</centertop>
								<left>15</left>
								<width>50</width>
								<height>50</height>
								<texture background="true">special://skin/extras/song_gifs/playingsong.gif</texture>
								<colordiffuse>white</colordiffuse>
								<bordersize>4</bordersize>
								<visible>ListItem.IsPlaying</visible>
								<bordertexture colordiffuse="cc000000">artworkdiffuse/circle.png</bordertexture>
							</control>
							<control type="label">
								<aligny>center</aligny>
								<left>100</left>
								<font>debugtiny</font>
								<textcolor>grey</textcolor>
								<label>$INFO[ListItem.TrackNumber,[B],[/B]  •  ]$INFO[listitem.label]$INFO[listitem.duration,   (,)][CR]$INFO[listitem.artist][CR]$INFO[listitem.album]$INFO[listitem.year,  (,)]</label>
							</control>
						</control>
					</itemlayout>
					<focusedlayout height="100">
							
						<control type="group">
							
							<height>90</height>
							<control type="image">
								<top>10</top>
								<left>10</left>
								<height>1</height>
								<texture background="true">colors/white.png</texture>
								<colordiffuse>cyan</colordiffuse>
							</control>
							<control type="image">
								<bottom>10</bottom>
								<left>10</left>
								<height>1</height>
								<texture background="true">colors/white.png</texture>
								<colordiffuse>cyan</colordiffuse>
							</control>
							<control type="image">
								<centertop>50%</centertop>
								<left>5</left>
								<width>70</width>
								<height>70</height>
								<texture background="true">$INFO[ListItem.Icon]</texture>
							</control>
							<control type="image">
								<centertop>50%</centertop>
								<left>15</left>
								<width>50</width>
								<height>50</height>
								<texture background="true">special://skin/extras/song_gifs/playingsong.gif</texture>
								<colordiffuse>white</colordiffuse>
								<bordersize>4</bordersize>
								<visible>ListItem.IsPlaying</visible>
								<bordertexture colordiffuse="cc000000">artworkdiffuse/circle.png</bordertexture>
							</control>
							<control type="label">
								<aligny>center</aligny>
								<left>100</left>
								<font>debugtiny</font>
								<textcolor>cyan</textcolor>
								<label>$INFO[ListItem.TrackNumber,[B],[/B]  •  ]$INFO[listitem.label]$INFO[listitem.duration,   (,)][CR][COLOR=white]$INFO[listitem.artist][CR]$INFO[listitem.album]$INFO[listitem.year,  (,)][/COLOR]</label>
							</control>
						</control>
					</focusedlayout>
					<content target="music">playlistmusic://</content>
				</control>
			</control>
		</control>
		
		
		<control type="group">
			<visible>Skin.HasSetting(MusicOSD_SmallPlaylist)</visible>
			
			<animation effect="slide" start="0,120" end="0,0" time="250">WindowOpen</animation>
			
			<animation effect="slide" start="0,0" end="0,120" time="250">WindowClose</animation>
						
			
			<description>put me left bottom cond slide up or roght fade in</description>
			<left>0</left>
			<height>100%</height>
			<width>34%</width>
			
			<control type="label" id="498">
				<visible>true</visible>
				<bottom>230</bottom>
				<left>60</left>
				<height>25</height>
				<align>left</align>
				<font>debugtiny2</font>
				<textcolor>$VAR[MusicPlayerTextAccent]</textcolor>
				<label>Current Playlist :</label>
			</control>
			
			<control type="fixedlist" id="499">
			
				<bottom>20</bottom>
				<left>60</left>
				<height>200</height>
				<aligny>center</aligny>
				<align>left</align>
				<preloaditems>2</preloaditems>
				<orientation>vertical</orientation>
				<focusposition>0</focusposition>
				
				<onup>699</onup>
				<onleft>ClearProperty(CurrentPlaylistVisible,home)</onleft>
				<onright>ClearProperty(CurrentPlaylistVisible,home)</onright>
		
				
				<onclick>RunScript(script.embuary.helper,action=playall,id=499,type=music,method=fromhere)</onclick>
				
				<onleft>6093</onleft>
				
				<pagecontrol>49960</pagecontrol>
				
				<scrolltime tween="quadratic">400</scrolltime>
				
				<itemlayout height="28">
					
					<control type="label">
						<align>left</align>
						<aligny>center</aligny>
							
						<textcolor>$VAR[MusicPlayerTextMainFO]</textcolor>
						<font>debugtiny2</font>
						<textcolor>grey</textcolor>
						<label>$INFO[listitem.artist] - $INFO[listitem.title] • [COLOR=$VAR[MusicPlayerTextAccent]]$LOCALIZE[554]:[/COLOR]$INFO[ListItem.TrackNumber] [COLOR=$VAR[MusicPlayerTextAccent]]/[/COLOR]$INFO[Container(499).NumItems]</label>
					</control>
						
				</itemlayout>
				<focusedlayout height="28">
						
					<control type="group">
						<control type="image">
							<description>MusicPlayerTextAccent vs MusicPlayerBorder_CDiffuse</description>
							<bordertexture border="2" colordiffuse="$VAR[MusicPlayerTextAccent]">frames/frametest.png</bordertexture>
							<texture colordiffuse="$VAR[MusicPlayerBorder_CDiffuse]" diffuse="artworkdiffuse/banner.png">colors/white50.png</texture>
							<bordersize>3</bordersize>
						</control>
						<control type="label">
							<align>left</align>
							<aligny>center</aligny>
							
							<textcolor>$VAR[MusicPlayerTextMainFO]</textcolor>
							<font>debugtiny2</font>
							<textcolor>grey</textcolor>
							<label>$INFO[listitem.artist] - $INFO[listitem.title] • [COLOR=$VAR[MusicPlayerTextAccent]]$LOCALIZE[554]:[/COLOR]$INFO[ListItem.TrackNumber] [COLOR=$VAR[MusicPlayerTextAccent]]/[/COLOR]$INFO[Container(499).NumItems]</label>
						</control>
					</control>
				</focusedlayout>
				<content target="music">playlistmusic://</content>
			</control>
		</control>
	</controls>
</window>