<?xml version="1.0" encoding="utf-8"?>
<!--Titan Mod-->
<window type="dialog" id="1110">
    <defaultcontrol always="true">9900</defaultcontrol>
	<menucontrol>111001</menucontrol>
	
	<!-- <onunload>Control.SetFocus(9000)</onunload> --> 
	<!-- need proparty as param , or use conditions -->
	
	<controls>
	
		<control type="group">
			<height>100%</height>
			<width>300</width>
			<animation type="WindowOpen">
				<effect type="slide" start="-300" end="0" time="300" tween="cubic" easing="inout" />
				<effect type="fade" start="0" end="100" time="300" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="0" end="-300" time="300" tween="cubic" easing="inout" />
				<effect type="fade" start="100" end="0" time="300" tween="cubic" easing="inout" />
			</animation>
			<!--Panel-->
			<control type="image">
				<posy>-250</posy>
				<posx>-20</posx>
				<width>300</width>
				<height>1750</height>
				<texture>colors/white.png</texture>
				<colordiffuse>black</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			<!-- header -->
			<control type="label">
				<posx>61</posx>
				<posy>200</posy>
				<width min="80" max="300">auto</width>
				<height>100</height>
				<font>Bold45</font>
				<align>left</align>
				<textcolor>white</textcolor>
				<label>Header 1</label>
			</control>
			
			<control type="grouplist" id="9900">
				<posx>50</posx>
				<posy>250</posy>
				<onleft>Dialog.Close(1110)</onleft>
				<onright>Dialog.Close(1110)</onright>
				<orientation>vertical</orientation>
				<itemgap>5</itemgap>
				
				<control type="button" id="388">
                    <width>650</width>
                    <label>137</label>
					<onclick>Skin.Reset(SearchTerm)</onclick>
					<onclick>Skin.SetString(SearchTerm)</onclick>
					<onclick>Dialog.Close(1110)</onclick>
					<!-- <onclick>Container.Refresh($PARAM[groupid])</onclick> -->
					<onclick>ReloadSkin</onclick>
				</control>
				<control type="radiobutton" id="50001">
					<width>560</width>
                    <label>XX</label>
					<onclick>Skin.ToggleSetting(XX)</onclick>
					<onclick>Dialog.Close(1110)</onclick>
					<onclick condition="Skin.HasSetting(YY)">Skin.ToggleSetting(YY)</onclick>
					<onclick>ReloadSkin</onclick>
					<selected>Skin.HasSetting(XX)</selected>
				</control>
				<control type="radiobutton" id="50002">
					<width>560</width>
					<label>YY</label>
					<onclick>Skin.ToggleSetting(YY)</onclick>
					<onclick>Dialog.Close(1110)</onclick>
					<onclick condition="Skin.HasSetting(XX)">Skin.ToggleSetting(XX)</onclick>
					<onclick>ReloadSkin</onclick>
					<selected>Skin.HasSetting(YY)</selected>
				</control>
				<control type="radiobutton" id="50003">
					<width>ZZ</width>
					<label>Show Media Flags</label>
					<onclick>Skin.ToggleSetting(ZZ)</onclick>
					<onclick>Dialog.Close(1110)</onclick>
					<selected>Skin.HasSetting(ZZ)</selected>
				</control>
				<control type="radiobutton" id="50004">
					<width>560</width>
					<label>AA</label>
					<onclick>Skin.ToggleSetting(AA)</onclick>
					<selected>Skin.HasSetting(AA)</selected>
				</control>
			</control>
		</control>
		
		<include content="HiddenMenuControl">
			<param name="action1" value="Dialog.Close(1110)" />
			<param name="menucontrol" value="111001" />
		</include>
		<include content="swan_debug_overlay" />
    </controls>
</window>