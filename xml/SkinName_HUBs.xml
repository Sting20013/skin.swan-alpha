<?xml version="1.0" encoding="UTF-8"?>
<includes>


<!-- JUST TESTING merge later -->
	<include name="HUB_Landscape">
		<control type="image">
			<description>bordertexture</description>
            <texture>artworkdiffuse/landscape.png</texture>
			<colordiffuse>$PARAM[colordiffuse]</colordiffuse>
			<bordersize>$PARAM[bordersize_bg]</bordersize>
        </control>
		<control type="image">
			<description>kodi default, aspectratio scalediffuse="true" aligny="center" align="center">stretch</description>
			<texture background="true" diffuse="artworkdiffuse/landscape.png" fallback="DefaultAudio.png">$VAR[ImageLayout_landscape]</texture>
			<bordersize>8</bordersize>
			<visible>!String.IsEmpty(ListItem.Art(landscape)</visible>
		</control>
		<control type="image">
			<description>Fallback aspect keep</description>
			<texture background="true" diffuse="artworkdiffuse/$PARAM[artwork].png" fallback="DefaultAudio.png">$VAR[ImageLayout_landscape]</texture>
			<aspectratio scalediffuse="false" aligny="center" align="center">scale</aspectratio>
			<bordersize>8</bordersize>
			<visible>String.IsEmpty(ListItem.Art(landscape))</visible>
		</control>
		<control type="group">
			<description>ClearLogo Overlay - fanart</description>
			<control type="image">
				<visible>
					[String.IsEmpty(ListItem.Art(artist.landscape)) +
					String.IsEmpty(ListItem.Art(albumartist.landscape)) +
					String.IsEmpty(ListItem.Art(landscape))]
				</visible>
				<visible>
					[!String.IsEmpty(ListItem.Art(clearlogo)) | 
					!String.IsEmpty(ListItem.Art(artist.clearlogo)) | 
					!String.IsEmpty(ListItem.Art(albumartist.clearlogo))]
				</visible>
				<bottom>20</bottom>
				<left>10</left>
				<right>10</right>
				<height>50%</height>
				<width>50%</width>
				
				<texture background="true">$VAR[ListItemClearLogo]</texture>
				<aspectratio align="left" aligny="bottom">keep</aspectratio>
			</control>
			
		</control>
		
		<control type="textbox">
				<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[autoscroll]</autoscroll>
				<bottom>-45</bottom>
				<left>10</left>
				<right>10</right>
				<wrapmultiline>true</wrapmultiline>
				<height>60</height>
				<font>CommonTag</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>$VAR[Container_label_itemtag]</textcolor>
				<selectedcolor>white</selectedcolor>
				<label>$VAR[Tags_Bottom]</label>
		</control>
	</include>
	
	<include name="HUB_square">
		<control type="image">
			<description>bordertexture</description>
            <texture>artworkdiffuse/square.png</texture>
			<colordiffuse>$PARAM[colordiffuse]</colordiffuse>
			<bordersize>$PARAM[bordersize_bg]</bordersize>
        </control>
		<control type="image">
			<texture background="true" diffuse="artworkdiffuse/square.png" fallback="DefaultAudio.png">$VAR[ImageLayout_square]</texture>
			<bordersize>8</bordersize>
		</control>
		
		<control type="textbox">
				<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[autoscroll]</autoscroll>
				<bottom>-30</bottom>
				<left>10</left>
				<right>10</right>
				<wrapmultiline>true</wrapmultiline>
				<height>60</height>
				<font>CommonTag</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>$VAR[Container_label_itemtag]</textcolor>
				<selectedcolor>white</selectedcolor>
				<label>$VAR[Tags_Bottom]</label>
		</control>
	</include>
	
	<include name="HUB_box">
		<control type="image">
			<bordertexture colordiffuse="$PARAM[colordiffuse]">artworkdiffuse/banner.png</bordertexture>
			<texture background="true" diffuse="artworkdiffuse/banner.png" fallback="DefaultAudio.png">artworkdiffuse/banner.png</texture>
			<colordiffuse>white</colordiffuse>
			<bordersize>$PARAM[bordersize_bg]</bordersize>
		</control>
		
		<control type="textbox">
				<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[autoscroll]</autoscroll>
				<wrapmultiline>true</wrapmultiline>
				<font>CommonTag</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>black</textcolor>
				<selectedcolor>white</selectedcolor>
				<label>$INFO[ListItem.Artist][CR]$INFO[ListItem.TrackNumber] - $INFO[ListItem.Title] $INFO[ListItem.Duration]</label>
		</control>
	</include>
	
	<include name="HUB_Circle">
		<control type="image">
			<description>Fallback aspect keep</description>
			<bordertexture colordiffuse="$PARAM[colordiffuse]">artworkdiffuse/circle.png</bordertexture>
			<texture background="true" diffuse="artworkdiffuse/circle.png" fallback="DefaultVideo.png">$VAR[ImageLayout_circle]</texture>
			<aspectratio scalediffuse="false" aligny="center" align="center">scale</aspectratio>
			<bordersize>$PARAM[bordersize_bg]</bordersize>
		</control>

		<control type="image">
				<visible>
					[!String.IsEmpty(ListItem.Art(clearlogo)) + !$EXP[IsEpisode]] | 
					[!String.IsEmpty(ListItem.Art(tvshow.clearlogo)) + $EXP[IsEpisode]] | 
					!String.IsEmpty(ListItem.Art(artist.clearlogo)) | 
					!String.IsEmpty(ListItem.Art(albumartist.clearlogo))
				</visible>
				<top>70%</top>
				<height>50%</height>
				<left>10</left>
				<right>10</right>
				<texture background="true">$VAR[ListItemClearLogo]</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
		</control>
			
		<control type="group">
			<!-- <visible>
				String.IsEmpty(ListItem.Art(tvshow.clearlogo)) +
				String.IsEmpty(ListItem.Art(artist.clearlogo)) +
				String.IsEmpty(ListItem.Art(albumartist.clearlogo)) +
				String.IsEmpty(ListItem.Art(clearlogo))
			</visible> -->
			<control type="textbox">
				<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[autoscroll]</autoscroll>
				<top>107%</top>
				<left>10</left>
				<right>10</right>
				<wrapmultiline>true</wrapmultiline>
				<height>60</height>
				<font>CommonTag</font>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>$VAR[Container_label_itemtag]</textcolor>
				<selectedcolor>white</selectedcolor>
				<label>$VAR[Tags_Bottom]</label>
			</control>
		</control>
		
		
	</include>
	
	
	
	
