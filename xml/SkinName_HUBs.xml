	<include name="hub_sectionheader">
		<control type="label" id="$PARAM[id]">
			<height>30</height>
			<width>300</width>
			<font>MenucontrolSectionHeading</font>
			<align>left</align>
			<textcolor>white</textcolor>
			<label>$PARAM[label]</label>
		</control>
	</include>
	
	<include name="hub_button">
		<param name="visible" default="true" />
		<definition>
			<control type="radiobutton" id="$PARAM[id]">
				<visible>$PARAM[visible]</visible>
				<width>100%</width>
				<height>25</height>
				<radiowidth>40</radiowidth>
				<radioheight>40</radioheight>
				<radioposx>10</radioposx>
				<textureradioonfocus colordiffuse="white">defaultaddonartistinfo.png</textureradioonfocus>
				<textureradioonnofocus colordiffuse="grey">$PARAM[radio_icon]</textureradioonnofocus>
				<textureradioofffocus colordiffuse="white">$PARAM[radio_icon]</textureradioofffocus>
				<textureradiooffnofocus colordiffuse="grey">$PARAM[radio_icon]</textureradiooffnofocus>
				<texturefocus />
				<texturenofocus />
				<font>MenucontrolItem</font>
				<label>     $PARAM[label]</label>
				<onfocus>SetProperty(MusicHUB_VisContent,$PARAM[property],home)</onfocus>
				<onclick>$PARAM[action]</onclick>
				<focusedcolor>white</focusedcolor>
				<textcolor>grey</textcolor>
				<selectedcolor>green</selectedcolor>
				<pulseonselect>no</pulseonselect>
			</control>
		</definition>
	</include>
