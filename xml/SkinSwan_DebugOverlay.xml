<?xml version="1.0" encoding="UTF-8"?>
<!-- SWAN -->
<includes>
	<include name="swan_debug_overlay">
		
		<definition>
		<control type="group">
			<visible>Skin.HasSetting(SwanDebug)</visible>
			
				<control type="image">
					<description>top header</description>
					<visible>$PARAM[topbar_visible]</visible>
					<top>0</top>
					<width>100%</width>
					<height>100</height>
					<texture>colors/white.png</texture>
					<colordiffuse>AA11E7B1</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="group">
					<centerleft>50%</centerleft>
					<width>95%</width>
					<top>150</top>
					<height>72%</height>
					<control type="image">
					<description>hot spot area</description>
						<texture>colors/white.png</texture>
						<colordiffuse>CCA0A0A0</colordiffuse>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="textbox">
						<font>debug</font>
						<aligny>top</aligny>
						<align>left</align>
						<top>10</top>
						<left>5</left>
						<textcolor>black</textcolor>
						<label>
$PARAM[textleft]
</label>
					</control>
					<control type="textbox">
						<font>debug</font>
						<aligny>top</aligny>
						<align>right</align>
						<top>10</top>
						<right>15</right>
						<textcolor>black</textcolor>
						<label>
$LOCALIZE[31030] $INFO[system.memory(used)] [B]/[/B] $INFO[system.memory(total)] -  $INFO[system.memory(used.percent)]
$LOCALIZE[13271] $INFO[System.CPUUsage]
System.GPUTemperature $INFO[System.GPUTemperature]

Property(xmlfile) :     $INFO[Window.Property(xmlfile)]
System.CurrentWindow :     $INFO[System.CurrentWindow]
System.CurrentControl :     $INFO[System.CurrentControl]
System.CurrentControlID :     $INFO[System.CurrentControlID]
</label>
					</control>
				</control>
				<control type="image">
				<description>footer space</description>
					<bottom>10</bottom>
					<aligny>top</aligny>
					<width>100%</width>
					<height>100</height>
					<texture>colors/white.png</texture>
					<colordiffuse>AA11E7B1</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
		</control>
		</definition>
	</include>
</includes>
