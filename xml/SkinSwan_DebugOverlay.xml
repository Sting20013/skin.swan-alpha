<?xml version="1.0" encoding="UTF-8"?>
<!-- SWAN -->
<includes>
	<include name="swan_debug_overlay">
		<definition>
		<control type="group">
			<visible>Skin.HasSetting(SwanDebug)</visible>
				<control type="image">
					<description>top header</description>
					<visible>$PARAM[topbar_visible]</visible>
					<top>0</top>
					<width>100%</width>
					<height>100</height>
					<texture>colors/white.png</texture>
					<colordiffuse>2211E7B1</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="group">
					<centerleft>50%</centerleft>
					<width>95%</width>
					<top>150</top>
					<height>72%</height>
					<control type="image">
					<description>hot spot area</description>
						<texture>colors/white.png</texture>
						<colordiffuse>cc000000</colordiffuse>
						<aspectratio>stretch</aspectratio>
					</control>
					<control type="textbox">
						<font>debugtiny</font>
						<aligny>top</aligny>
						<align>left</align>
						<top>5</top>
						<left>5</left>
						<wrapmultiline>true</wrapmultiline>
						<textcolor>black</textcolor>
						<label>
$PARAM[textleft]
</label>
					</control>
					<control type="textbox">
						<font>debug</font>
						<aligny>top</aligny>
						<align>right</align>
						<top>10</top>
						<right>15</right>
						<textcolor>red</textcolor>
						<label>$LOCALIZE[31030] $INFO[system.memory(used)] [B]/[/B] $INFO[system.memory(total)] -  $INFO[system.memory(used.percent)]
$LOCALIZE[13271] $INFO[System.CPUUsage]
System.GPUTemperature $INFO[System.GPUTemperature]
Property(xmlfile) :     $INFO[Window.Property(xmlfile)]
System.CurrentWindow :     $INFO[System.CurrentWindow]
System.CurrentControl :     $INFO[System.CurrentControl]
System.CurrentControlID :     $INFO[System.CurrentControlID]



</label>
					</control>
				</control>
				<control type="group">
					<!-- <visible>Window.IsActive(visualisation) | String.IsEqual(MusicPlayer.DBtype,song)</visible> -->
						<control type="textbox">
						<font>font20</font>
						<aligny>top</aligny>
						<align>left</align>
						<top>150</top>
						<left>600</left>
						<textcolor>cyan</textcolor>
						<label>[B]MusicPlayer.DBtype[/B] : $INFO[MusicPlayer.DBtype]
[B]Player.Art(thumb)[/B] : $INFO[Player.Art(thumb)]
[B]MusicPlayer.Art(thumb)[/B] : $INFO[MusicPlayer.Art(thumb)]






[B]Player.Art(artist.fanart) : [/B] $INFO[Player.Art(artist.fanart)]
[B]MusicPlayer.Art(artist.fanart)[/B] : $INFO[MusicPlayer.Art(artist.fanart)]







[B]Player.Art(albumartist.fanart) : [/B] $INFO[Player.Art(albumartist.fanart)]
[B]MusicPlayer.Art(albumartist.fanart)[/B] : $INFO[MusicPlayer.Art(albumartist.fanart)]</label>
					</control>
				<control type="image">
					<description>footer space</description>
					<bottom>10</bottom>
					<aligny>top</aligny>
					<width>100%</width>
					<height>100</height>
					<texture>colors/white.png</texture>
					<colordiffuse>2211E7B1</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
				<control type="image" id="488">
					<height>300</height>
					<width>300</width>
					<texture>$INFO[Player.Art(thumb)]</texture>
				</control>
				<control type="image" id="489">
					<top>500</top>
					<height>300</height>
					<width>700</width>
					<texture>$INFO[Player.Art(artist.fanart)]</texture>
				</control>
				<control type="image" id="490">
					<top>900</top>
					<height>300</height>
					<width>700</width>
					<texture>$INFO[Player.Art(albumartist.fanart)]</texture>
				</control>
			</control>
		</control>
		<!-- for ease 
		file:///C:/apps/Kodi Leia/portable_data/userdata/addon_data/skin.swan-beta/settings.xml
		-->
		<control type="button">
			<visible>Skin.HasSetting(SwanDebug)</visible>
			<texturefocus colordiffuse="red">colors/white.png</texturefocus>
			<texturenofocus colordiffuse="red">colors/white50.png</texturenofocus>
			<centerleft>60%</centerleft>
			<height>100</height>
			<width>500</width>
			<wrapmultiline>true</wrapmultiline>
			<label>Button :[CR]store container.folderpath to settings.xml</label>
			<onclick>Skin.SetString(SkinSaved_containerfoldepath,$INFO[Container.Folderpath])</onclick>
		</control>
		</definition>
	</include>
</includes>
