<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="view50">
		<control type="group">
			<visible>Control.IsVisible(50)</visible>
			
			
			<control type="textbox">
				<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[autoscroll]</autoscroll>
				<wrapmultiline>true</wrapmultiline>
				<visible>false</visible>
				<font>Reg20</font>
				<height>200</height>
				<bottom>100</bottom>
				<width>25%</width>
				<left>5%</left>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>white</textcolor>
				<selectedcolor>white</selectedcolor>
				<label>$INFO[ListItem.Label] test [CR][B]$INFO[ListItem.Studio][/B]</label>
			</control>
			
			
			
			<control type="group">
				<visible>Skin.HasSetting(View_50_ShowBGPanel)</visible>
				
				<include content="View_BGPanel">
					<param name="width2" value="33%" />
					<param name="width3" value="5%" />
				</include>
			
			</control>
			<control type="image">
				<left>5%</left>
				<fadetime>500</fadetime>
				<centertop>51%</centertop>
				<width>26%</width>
				<aspectratio>keep</aspectratio>
				<bordersize>2</bordersize>
				<bordertexture border="5" colordiffuse="white">frames/dialog16to9.png</bordertexture>
				<texture>$VAR[PreferedThumb_Sourcing]</texture>
				<aspectratio aligny="center" align="center">keep</aspectratio>
			</control>
			<control type="panel" id="50">
				<orientation>vertical</orientation>
				<preloaditems>2</preloaditems>
				<scrolltime tween="quadratic">400</scrolltime>
				<left>35%</left>
				<right>5%</right>
				<width>57%</width>
				<bottom>100</bottom>
				<top>150</top>
				<include>Oninfo_MovieSetInfo</include>
				<include>NavControl_Media</include>
				
				<viewtype label="535">list</viewtype>
				
				<itemlayout height="105">
				<control type="group">
					<height>90</height>
					
					<include content="list_panel">
						<param name="colordiffuse" value="none" />
						<param name="autoscroll" value="false" />
						<param name="bordersize_bg" value="6" />
						<param name="highlightcolor" value="grey" />
					</include>
				</control>
			</itemlayout>
			<focusedlayout height="105">
				<control type="group">
					<height>90</height>
					
					<include>Animation_Item_Focus</include>
					<control type="group">
						<control type="image">
								<left>50</left>
								<bordertexture border="6" colordiffuse="white">frames/dialog16to9.png</bordertexture>
								<texture colordiffuse="cc202020" background="true" diffuse="artworkdiffuse/banner.png">colors/white50.png</texture>
							
								<bordersize>3</bordersize>
						</control>
							<include content="list_panel">
							<param name="colordiffuse" value="$VAR[Container_item_fo]" />
							<param name="autoscroll" value="true" />
							<param name="bordersize_bg" value="4" />
							<param name="highlightcolor" value="red" />
							
						</include>
					</control>
					<control type="image">
						<centertop>50%</centertop>
						<visible>false</visible>
						<left>14</left>
						<visible>true</visible>
						<width>60</width>
						<height>60</height>
						<texture diffuse="artworkdiffuse/circle.png" background="true">overlay/overlay_button_play.png</texture>
						<colordiffuse>white</colordiffuse>
						<bordersize>2</bordersize>
						<bordertexture colordiffuse="55000000">artworkdiffuse/circle.png</bordertexture>
					</control>
				</control>
			</focusedlayout>
			</control>
			<include content="footer_test">
				<param name="label" value="f o o t e r" />
				<param name="view_id" value="50" />
			</include>
			
		</control>
	</include>
	
	<include name="list_panel">
		<!--
		<control type="image">
			<left>50</left>
			<bordertexture colordiffuse="$PARAM[colordiffuse]" diffuse="artworkdiffuse/banner.png">colors/white50.png</bordertexture>
			<texture colordiffuse="none" background="true" diffuse="artworkdiffuse/banner.png">colors/white50.png</texture>
			
			<texture colordiffuse="cc202020" background="true" diffuse="artworkdiffuse/banner.png">colors/white50.png</texture>
			
			<bordersize>3</bordersize>
		</control>
		-->
		<control type="image">
			<description>het half cutted circle for icon border studio or thumb midgrey just as workaround</description>
			<visible>true</visible>
			<width>90</width>
			<height>90</height>
			<texture background="true" diffuse="artworkdiffuse/circle.png">$INFO[ListItem.Icon]</texture>
			<bordertexture colordiffuse="white">artworkdiffuse/circle.png</bordertexture>
			<aspectratio scalediffuse="false" aligny="center" align="center">scale</aspectratio>
			<bordersize>2</bordersize>
		</control>
		<control type="image">
			<description>use ? playing equalizer</description>
			<centertop>50%</centertop>
			<left>14</left>
			<width>60</width>
			<height>60</height>
			<texture background="true">misc/playingsong.gif</texture>
			<colordiffuse>white</colordiffuse>
			<bordersize>4</bordersize>
			<visible>false</visible>
			<bordertexture colordiffuse="55000000">artworkdiffuse/circle.png</bordertexture>
		</control>
		<control type="textbox">
			<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[autoscroll]</autoscroll>
			<wrapmultiline>true</wrapmultiline>
			<font>CommonTag</font>
			<width>580</width>
			<left>105</left>
			<align>left</align>
			<aligny>center</aligny>
			<textcolor>white</textcolor>
			<selectedcolor>white</selectedcolor>
			<label>$INFO[ListItem.Label,[B],[/B]][CR][COLOR=grey]$INFO[ListItem.Year]     $INFO[ListItem.Label2,[B],[/B]][/COLOR]</label>
		</control>
		<control type="textbox">
			<autoscroll delay="2000" time="1500" repeat="1500">$PARAM[autoscroll]</autoscroll>
			<wrapmultiline>true</wrapmultiline>
			<font>CommonTag</font>
			<width>100</width>
			<right>90</right>
			<align>right</align>
			<aligny>center</aligny>
			<textcolor>white</textcolor>
			<selectedcolor>white</selectedcolor>
			<label>[CR]$INFO[ListItem.Duration(h),, h]$INFO[ListItem.Duration(m), , m]  </label>
		</control>
		<control type="image">
			<description>stars rating</description>
			<top>8</top>
			<right>90</right>
			<visible>true</visible>
			<width>100</width>
			<height>40</height>
			
			<bordersize>4</bordersize>
			<aspectratio align="center">keep</aspectratio>
			<texture colordiffuse="$PARAM[highlightcolor]">rating/stars/$INFO[ListItem.Rating].png</texture>
		</control>
		<control type="image">
			<description>use ? playing equalizer</description>
			<centertop>50%</centertop>
			<right>70</right>
			<width>1</width>
			<height>50%</height>
			<texture colordiffuse="white">colors/white50.png</texture>
			<colordiffuse>white</colordiffuse>
			<visible>false</visible>
			
			<bordertexture />
		</control>
		
		<include>ListItem_Indicators</include>
		
	</include>
	
