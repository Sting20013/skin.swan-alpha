</label>
					</control>
					
				</control>
				<control type="image">
				<description>footer space</description>
					<bottom>10</bottom>
					<aligny>top</aligny>
					<width>100%</width>
					<height>100</height>
					<texture>colors/white.png</texture>
					<colordiffuse>AA11E7B1</colordiffuse>
					<aspectratio>stretch</aspectratio>
				</control>
		</control>
