		<texturenofocus colordiffuse="$VAR[Button_Panel_NF]">artworkdiffuse/circle.png</texturenofocus>
		<focusedcolor>$VAR[Button_Text_FO]</focusedcolor>
		<textcolor>$VAR[Button_Text_NF]</textcolor>
		<align>center</align>
		<aligny>center</aligny>
		<font>font25</font>
	</include>
