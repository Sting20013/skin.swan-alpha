	<include name="Settings_InfoBottom">
		<control type="textbox">
			<bottom>20</bottom>
			<centerleft>50%</centerleft>
			<width>64%</width>
			<height>110</height>
			<label>$INFO[$PARAM[label]]</label>
			<align>center</align>
			<aligny>top</aligny>
			<textcolor>$VAR[Headingline_NF]</textcolor>
			<font>font12</font>
